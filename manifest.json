{
  "manifest_version": 3,
  "name": "GQL Hint Remover",
  "version": "1.0",
  "description": "This extension removes CodeMirror hints from the page when removed nodes are detected.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
